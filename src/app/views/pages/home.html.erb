<%= render 'layouts/header' %>
<div class="container">
  <div class="jumbotron">
    <h1 class="text-center">Weekly Schedule</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Swap Status</th>
        </tr>
      </thead>
      <tbody>
        <% @shifts.each do |s| %>
          <tr>
            <td><%= s.pretty_date %></td>
            <td><%= s.pretty_time %></td>
            <td>
              <% case s.swap_status %>
                <% when "up" %>
                  <%= link_to "Take Down", "#", class: "btn btn-default btn-xs" %>
                <% when "down" %>
                  <%= link_to "Put Up", "#", class: "btn btn-default btn-xs" %>
                <% when "pending" %>
                  pending...
                <% else %>
                  <p>error!</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
