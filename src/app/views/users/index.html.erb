  <table class="table">
    <thead>
      <th>Name</th>
      <th>ID</th>
      <th>Options</th>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.full_name %></td>
          <td><%= u.id %></td>
          <% if @user.access == 1 and @user != u %>
            <td><%= button_to "Delete", u, method: :delete, class: "btn btn-default btn-sm" %></td>
            <td><%= button_to "Edit", edit_user_path(u), method: :get, class: "btn btn-default btn-sm" %></td>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
